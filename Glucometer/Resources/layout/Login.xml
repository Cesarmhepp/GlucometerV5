
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="15.0dp"
    android:layout_marginVertical="5.0dp"
    android:background="@drawable/boder">

    <ImageView
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView1"
        android:minWidth="325.0dp"
        android:minHeight="150.0dp"
        android:layout_margin="20.0dp"/>
    <TextView
        android:text="Usuario"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textSize="20dp"
        android:layout_marginHorizontal="30.0dp"
        android:layout_marginVertical="5.0dp"/>
    <EditText
        android:background="@drawable/editext"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="50.3dp"
        android:gravity="center"
        android:id="@+id/editCorreo"
        android:layout_marginHorizontal="30.0dp"/>
    <TextView
        android:text="ContraseÃ±a"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textContra"
        android:layout_marginHorizontal="30.0dp"
        android:layout_marginVertical="5.0dp"/>
    <EditText
        android:background="@drawable/editext"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="44.0dp"
        android:gravity="center"
        android:id="@+id/editContra"
        android:layout_marginHorizontal="30.0dp"
        android:layout_marginBottom="16.7dp" />

    <Button
        android:background="@drawable/button"
        android:text="Iniciar"
        android:layout_width="156.0dp"
        android:layout_height="55.7dp"
        android:id="@+id/btnLogin"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="9.0dp" />

    <Button
        android:background="@drawable/button"
        android:text="Registrar"
        android:layout_width="156.0dp"
        android:layout_height="55.7dp"
        android:id="@+id/btnRegistrarInicio"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="39.0dp" />


    <com.facebook.login.widget.LoginButton
        android:id="@+id/fb_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp" />
</LinearLayout>



