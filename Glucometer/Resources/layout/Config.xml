<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/boder">

    <TextView
        android:text="Menu de configuración"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/textView1"
        android:layout_marginTop="6.0dp" />
    <Button
        android:background="@drawable/boder"
        android:text="Configuracion de cuenta"
        android:layout_width="match_parent"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/btnConfigUsuario"
        android:layout_height="44.5dp"
        android:layout_marginHorizontal="33.0dp"
        android:layout_marginVertical="15.5dp" />
	<Button
        android:background="@drawable/boder"
		android:text="Idioma"
		android:layout_width="match_parent"
		android:minWidth="25px"
		android:minHeight="25px"
         android:layout_height="44.5dp"
        android:layout_marginHorizontal="33.0dp"
        android:layout_marginVertical="15.5dp"
		android:id="@+id/btnIdioma" />
	<Button
        android:background="@drawable/boder"
		android:text="Políticas  de usuario"
		android:layout_width="match_parent"
         android:layout_height="44.5dp"
        android:layout_marginHorizontal="33.0dp"
        android:layout_marginVertical="15.5dp"
		android:minWidth="25px"
		android:minHeight="25px"
		android:id="@+id/btnPoliticas" />
	<Button
        android:background="@drawable/boder"
		android:text="Asistencia a usuario"
		android:layout_width="match_parent"
		android:minWidth="25px"
		android:minHeight="25px"
         android:layout_height="44.5dp"
        android:layout_marginHorizontal="33.0dp"
        android:layout_marginVertical="15.5dp"
		android:id="@+id/btnasis" />
	<Button
        android:background="@drawable/boder"
		android:text="Cerrar sesión"
		android:layout_width="match_parent"
		android:minWidth="25px"
		android:minHeight="25px"
         android:layout_height="44.5dp"
        android:layout_marginHorizontal="33.0dp"
        android:layout_marginVertical="15.5dp"
		android:id="@+id/btnCerrarSesion" />
</LinearLayout>
